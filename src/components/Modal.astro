---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<div id={id} class="modal">
  <div class="modal-content">
    <a href="#" class="modal-close">&times;</a>
    <slot />
  </div>
</div>

<style>
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
    z-index: 1000;
  }

  .modal:target {
    opacity: 1;
    visibility: visible;
  }

  .modal-content {
    background-color: white;
    padding: 20px;
    border-radius: 5px;
    position: relative;
    max-width: 500px;
    width: 90%;
  }

  .modal-close {
    position: absolute;
    top: 10px;
    right: 10px;
    text-decoration: none;
    color: #333;
    font-size: 50px;
  }
</style>