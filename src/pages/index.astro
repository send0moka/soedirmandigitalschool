---
import PageLayout from "@layouts/PageLayout.astro"
import { SITE } from "@config"
import BentoGrid from "@components/BentoGrid.astro"
import CountdownTimer from "@components/CountdownTimer.astro"
import Timeline from "@components/Timeline.astro"
---

<PageLayout title="Home" description={SITE.DESCRIPTION}>
  <div class="min-h-screen bg-retro flex flex-col justify-center items-center">
    <div class="relative z-10 container mx-auto mt-24 px-4 py-16">
      <section class="flex flex-col justify-center items-center">
        <h1 data-aos="fade-up" data-aos-delay="300" data-aos-once="false" class="font-display text-center -translate-x-3 text-6xl sm:text-8xl md:text-9xl mb-6 lg:mb-0 lg:leading-[1.15] text-rainbow wave-text">Tingkatkan Skill</h1>
        <h1 data-aos="fade-up" data-aos-delay="600" data-aos-once="false" class="font-display text-center -translate-x-3 text-5xl sm:text-7xl md:text-9xl lg:leading-[1.15] text-rainbow mb-12 wave-text">Digital Bersama SDS!</h1>
        <p data-aos="fade-up" data-aos-delay="900" data-aos-once="false" class="sm:text-xl bg-ijo-muda text-balance text-center lg:w-1/2 md:text-hitam font-bold tracking-wide mb-4 py-4 rounded-3xl border-2 border-hitam">Investasikan waktumu dalam pembelajaran teknologi berkualitas dan raih peluang karir yang tak terbatas di era digital.</p>
        <div class="flex flex-col sm:flex-row items-center sm:items-start justify-center gap-6">
          <a data-aos="fade-up" data-aos-delay="1200" data-aos-once="false" href="#courses" class="btn">
            <div class="btn__content !h-14 !px-8">
              <span class="-mt-1 font-semibold text-xl">Daftar Sekarang</span>
              <svg class="btn__arrow h-4 opacity-90 stroke-current bold-stroke" width="25" height="15" fill="currentColor">
                <use href="/ui.svg#arrow"></use>
              </svg>
            </div>
          </a>
          <CountdownTimer targetDate="2024-09-07T07:00:00+07:00" />
        </div>
      </section>
    </div>
  </div>
  <div class="min-h-screen">
    <div class="flex overflow-hidden justify-center shadow-lg">
      {[1, 2, 3, 4, 5].map((_, index) => (
        <img src="chess.webp" alt="chess" class={`h-20 w-auto object-cover ${index % 2 !== 0 ? '-scale-y-100' : ''}`} width="80" height="80" loading="lazy" />
      ))}
    </div>
    <section class="flex flex-col justify-center items-center my-20">
      <BentoGrid />
    </section>
    <section class="flex flex-col justify-center items-center my-20">
      <Timeline />
    </section>
  </div>
</PageLayout>

<script>
  import { initWaveText } from "../scripts/waveText.js"
  document.addEventListener("DOMContentLoaded", initWaveText)
  document.addEventListener("astro:after-swap", initWaveText)
</script>